{
  "timezone": "Asia/Tokyo",
  "extends": ["config:base"],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "pinDigests": false,
  "packageRules": [
    {
      "packagePatterns": [
        "*"
      ]
    },
    {
      "depTypeList": [
        "dependencies"
      ],
      "groupName": "dependencies"
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "groupName": "devDependencies"
    }
  ],
  "ignoreDeps": [
    "query-string",
    "@types/query-string",
    "@types/styled-components"
  ],
  "schedule": [
    "before 10pm"
  ]
}
